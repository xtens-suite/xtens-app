<style>
  svg .subject-node {
    fill: #ffffff;
    stroke-width: 3px;
    cursor: pointer;
    stroke-opacity: 1;
    transition: stroke-opacity .4s ease;
  }

  svg .subject-node:hover {
    stroke-opacity: 0.5;
  }

  .node text {
    font: 12px;
  }

  .link {
    fill: none;
    stroke: #ccc;
    stroke-width: 2px;
  }

  .d3-tip {
    line-height: 1;
    font-weight: bold;
    padding: 12px;
    background: rgba(0, 0, 0, 0.8);
    color: #fff;
    border-radius: 2px;
    position: absolute;
    text-align: center;
    margin-left: 20px;
  }

  .d3-tip.n:after {
    margin: 0 0 0 0;
    top: 100%;
  }

  #tip-subj-title {
    font-size: 22px;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 8px;
  }
</style>
<div id="content">
  <label for="subject-selector" class="text-uppercase"><%= __("select-a-patient") %>:</label>
  <div class="row">
    <div class="col-md-5">
      <select id='subject-selector' class="form-group selectpicker" data-live-search="true" data-width="100%">
        <% _.each(subjects, function(subject) {
              var label = subject.givenName && subject.surname ? subject.surname + " " + subject.givenName + " - " + subject.code : subject.code; %>
        <option value='<%= subject.id %>'><%= label %></option>
        <% }) %>
      </select>
    </div>
  </div>
</div>