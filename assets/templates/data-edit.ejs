<h1><%= __("data-manager") %></h1>
<h2><%= data.id ? __("update-data") : __("create-data") %></h2>
<div id="content">
    <form class="form-horizontal edit-data-form" role="form" data-parsley-focus="first" data-parsley-trigger="focusout" data-parsley-validate>
        <div class="container data-header-cnt">
            <div id="data-header-row" class="row data-header-row">
                <div id="data-header" class="data-header-col">
                    <div class="form-group">
                        <% if (data.get("parentSubject") && data.get("parentSubject").length > 0) {%>
                        <label for="parentSubject" class="data-label"><%= data.get("parentSubject").length === 1 ? __("subject") : __("subjects")  %>: </label>
                        <span class="data-span"><%= _.map(data.get("parentSubject"), "code").join(",") %></span>
                        <%} %>
                        <% if (data.get("parentSample") && data.get("parentSample").length > 0) {%>
                        <label for="parentSample" class="data-label"><%= data.get("parentSample").length === 1 ?  __("sample") :  __("samples") %>: </label>
                        <span class="data-span"><%= _.map(data.get("parentSample"), "biobankCode").join(",") %></span>
                        <%} %>
                    </div>
                    <div class="form-group">
                        <label for="data-type" class="data-label"><%= __("select-a-data-type") %></label>
                        <div class="data-input-div">
                            <select class="form-control" id="data-type" name="data-type" required></select>
                        </div>
                        <label for="owner" class="col-md-2 data-label"><%= __("owner") %></label>
                        <div class="data-input-div">
                            <select disabled class="form-control" id="owner" name="owner" required></select>
                        </div>
                    </div>
                    <div class="form-group metadataform-group">
                        <label for="date" class="data-label"><%= __('date') %></label>
                        <div class="data-input-div">
                            <input text class="form-control" id="date" name="date" placeholder="<%= __('please-select') %>" ></input>
                        </div>
                    </div>
                    <div class="form-group metadataform-group">
                        <label for="tags" class="data-label"><%= __('tags') %></label>
                        <div class="data-input-div">
                            <input type="hidden" class="form-control" id="tags" name="tags"></input>
                        </div>
                    </div>
                    <div class="form-group metadataform-group">
                        <label for="notes" class="data-label"><%= __('notes') %></label>
                        <div class="data-input-div">
                            <textarea class="form-control" id="notes" name="notes" rows="4"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="buttonbardiv" class="row text-center">
            <div class="btn-group btn-group-margin">
                <input type="submit" id="save" class="btn btn-primary" value="<%=__('save') %>" >
                <% if (data.id) { %>
                    <input type="hidden" id="id" name="id" value="<%= data.id %>" />
                    <button data-data-id="<%= data.id %>" class="btn btn-danger delete"><%= __("delete") %></button>
                <%} %>
            </div>
        </div>
    </form>
</div>
<div class="data-modal"></div>
