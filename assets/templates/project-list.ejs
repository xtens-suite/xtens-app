<h2 class="legend" align="center"><%= __("project-list") %></h2>
<div id="list">
  <div class="table-container">
    <table class="table striped">
      <thead>

        <tr>
          <th>
            <%= __("name") %>
          </th>
          <th><%= __("actions") %></th>
        </tr>
      </thead>
      <script type="text/css">
        tbody{ background-color:blue; }
      </script>


      <tbody>
        <% _.each(projects, function(project) { %>
          <tr>
            <td class="project_val"><%= project.get("name") %></td>
            <td class="text-right">
              <div class="btn-group btn-group-sm" role="group" style="margin-top:0.5vh;">
              <a type="button" class="btn btn-info" id="edit" href="#/projects/edit/<%= project.id %>">
                <%=__("edit") %>
              </a>
              <a type="button" class="btn btn-primary" id="groups" href="#/groups?projects=<%= project.get('name') %>">
                <%=__("member-groups") %>
              </a>

              <a type="button" class="btn btn-primary" id="dataTypes" href="#/datatypes?project=<%= project.id %>">
                <%=__("associated-data-type") %>
              </a>
            </div>

            </td>


          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
  <div id="buttonbardiv" class="row text-center">
    <a href="#/projects/new" class="btn btn-primary">
      <%= __("new-project")%>
    </a>
  </div>
</div>
